<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: don't hardcode width/height values -->
    <ImageView
        android:id="@+id/member_profile_photo"
        android:contentDescription="@string/member_name"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        app:srcCompat="@drawable/default_profile_photo"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/member_name_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/member_profile_photo"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:text="@string/member_name" />
</RelativeLayout>